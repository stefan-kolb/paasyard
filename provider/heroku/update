#!/bin/bash
set -eo pipefail

_DIR_="$(dirname "$0")"
cd $_DIR_

. helpers.sh

echo "-----> Updating application..."
# authentication
heroku auth:login <<END
$HEROKU_USERNAME
$HEROKU_PASSWORD
END

# add remote if missing
heroku git:remote -a $APPNAME --ssh-git

# update files
expect <<'END'
  set timeout 1000
  spawn git push heroku master -f
  expect {
    -re ".*continue connecting (yes/no)?.*" { send "yes\r"}
  }
  expect eof
END

echo "-----> Checking availability..."
is_up "https://$APPNAME.herokuapp.com"

